<h1>Usuários</h1>
<!-- <p>Find me in app/views/user/index.html.erb</p> -->


<table>
	<tr>
	<td><strong>Username</strong></td>
	<td><strong>Email</strong></td>
	</tr>	

	<%@users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td><%= user.account_status %></td>
			<td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
			
			<% if user.account_status == false %>
			<td> <%= link_to 'Reativar' , reactivate_account_path(user) %> </td>
			<% else %>
			<td> <%= link_to 'Desativar' , desactivate_account_admin_path(user) %> </td>
			<% end %>

		</tr>

	<% end %>
</table>