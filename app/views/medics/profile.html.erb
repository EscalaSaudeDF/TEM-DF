<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class= "panel-body">
				<div class="col-lg-2">
					<%= image_tag "medico140x126.png", class: "img_responsive img-rounded" %>
					<%= form_tag("/medics/rating", method: "post") do %> 
							<input id="input-2a" class="rating" name="grade" data-min="0" data-max="5" data-step="1" data-stars=5 
		   					 	data-glyphicon="false">
		   					<%= hidden_field_tag :medic_id, @medic.id %>
							<%= submit_tag 'Avaliar' , class: 'btn btn-lg btn-success rating-button' %>
					<%end%>
				</div>
				<div class="col-lg-6">
					<table>
						<tr>
							<h3><%=@medic.name%></h3>
						</tr>
						<tr>
							<td> Especialidade: </td>
							<td><%=@medic.speciality%></td>
						</tr>
						<tr>
							<td> Departamento: </td>
							<td><%=@medic.department%></td>
						</tr>
						<tr>
							<td> Unidade de Trabalho: </td>
							<td><%=@work_unit.name%></td>
						</tr>
						<tr>
							<td> Avaliação Média: <%=@average%></td>
							<td> Número de Avaliações: <%=@ratings%></td>
							
						</tr>
					</table>
				</div>
				<div class="col-lg-1 col-lg-offset-3">
					<!-- Button trigger modal -->
					<button class="btn btn-primary btn-lg button-schedule" data-toggle="modal" data-target="#myModal" title="Escala">
				    <i class="fa fa-table"></i>
				  </button>
				    <!-- Modal -->
				    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				      <div class="modal-dialog">
				          <div class="modal-content">
				              <div class="modal-header">
				                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				                  <h4 class="modal-title" id="myModalLabel">
				                    Escala - <%= @medic.name%>
				                  </h4>
				              </div>
				              <div class="modal-body">
				                <table class="table table-striped table-bordered table-hover" id="dataTables">
				                  <thead>
				                    <tr>
				                      <th>Entrada</th>
				                      <th>Saída</th>
				                    </tr>
				                  </thead>
				                  <tbody>
				                    <%@medic.schedules.each do |schedule|%>
				                      <tr>
				                        <td><%= schedule.in.strftime("%d de %B de %Y, as %H:%M") %></td>
				                        <td><%= schedule.out.strftime("%d de %B de %Y, as %H:%M") %></td>
				                      </tr>
				                  <%end%>
				                  </tbody>
				                </table>
				              </div>                                      
				          </div>
				          <!-- /.modal-content -->
				      </div>
				      <!-- /.modal-dialog -->
				    </div>
				    <!-- /.modal -->
				</div>
			</div>
		</div>
		<div class="panel panel-default widget">
            <div class="panel-heading">
        		<h3 class="panel-title">
                    Comentários
                </h3>
                	
                <span class="label label-info">
                    <%= @medic.comments.size %></span>
            </div>
            <div class="panel-body">
            	<%= form_tag("/medics/create_comment", method: "post") do %> 
					<%if current_user%>
						<%= hidden_field_tag  :medic_id, @medic.id %>
						<div class="input-group">
							<%= text_field_tag :content, "", class: "form-control", maxlength: 300, placeholder: 'Escreva seu cometário aqui'%>
							<span class="input-group-btn">
								<%= submit_tag 'Enviar', class: "btn btn-primary" %>
							</span>
						</div>
					<%else%>
						<div class="input-group">
							<%= text_field_tag :content, "", class: "form-control", disabled: true, placeholder: 'Acesse sua conta para comentar.'%>
							<span class="input-group-btn">
								<%= submit_tag 'Enviar', class: "btn btn-primary", disabled: true %>
							</span>
						</div>
					<%end%>
				<%end%>
                <ul class="list-group">
                	<% @medic.comments.reverse_each do |comment| %>
                		<%if comment.comment_status == true%>
		                    <li class="list-group-item">
		                        <div class="row">
		                        	<%= link_to "", to_report_path(:comment_id => comment.id, :medic_id => @medic.id) , class: "fa fa-exclamation close report ",  data: { confirm: 'Você tem certeza?' }, :title=> "Denunciar"%>
		                            <div class="col-xs-10 col-md-11">
		                                <div class="comment-text">
		                                    <%= comment.content%>
		                                </div>
		                                <div class="action mic-info ">
		                                	Feito por: <%= comment.user.username%> on <%= comment.date.strftime("%d de %B de %Y") %>
		                                	<br>
		                                	 Esse comentário foi útil?
		                                	<div class="btn-group" role="group" aria-label="..."> 
	      									<%= link_to " sim", create_relevance_path(:value => true, :comment_id => comment.id, :medic_id => @medic.id) , class: "fa fa-thumbs-up btn btn-default btn-xs"%>
	      									<%= link_to " não", create_relevance_path(:value => false, :comment_id => comment.id, :medic_id => @medic.id) , class: "fa fa-thumbs-down btn btn-default btn-xs"%>
	      									</div>
		                                </div>
		                            </div>
		                        </div>
		                    </li>
		                <% end %>
                    <% end %>
                    <% if @medic.comments.size == 0%>
                    	<li class="list-group-item">
                    		Não há Comentários.
                    	</li>
                    <% end %>
                </ul>
                
            </div>
        </div>

	</div>
</div>

<script>
	// initialize with defaults
	$("#input-2a").rating({
		clearButton: '<button class="btn btn-default" type="button"> Limpar </button>'
	});

    $(document).ready(function() {
        $('#dataTables').dataTable();
    });
</script>
