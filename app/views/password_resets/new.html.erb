<%= form_tag password_resets_path, :method => :post do %>
	<div class="col-lg-6 col-md-offset-2">
		<div class="login-panel panel panel-default">
			<div class="panel-heading">
	        	Redefinição de Senha
	    	</div>
	    	<div class="panel-body">
				<div class="field">
					<div class="form-group"> 
						<%= label_tag :Nome %>
						<%= text_field_tag :username, params[:username],:required => true,class: "form-control" %>
					</div>

					<div class="form-group"> 
						<%= label_tag :Email %>
						<%= text_field_tag :email, params[:email], :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}',class: "form-control" %>
					</div>
				</div>
				<div align="center">
			    	<div class="actions"><%= submit_tag "Requisitar",  class: "btn btn-lg btn-primary btn-block" %></div>
				</div>
			</div>
	 	</div>
	</div>
<% end %>
